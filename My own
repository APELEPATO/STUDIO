<body>

    <div id="splash-screen">
        <h1 class="brand-name" id="brand-name-animated"></h1>
    </div>

    <div id="main-content">
        <div class="contact-card">
            <h2>Adithyan</h2>
            <ul>
                <li><strong>Email:</strong> adithyankumar2@gmail.com</li>
                <li><strong>Phone:</strong> 9207042513</li>
                <li><strong>Phone:</strong> 8075904754</li>
            </ul>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const brandName = "MK677";
            const brandElement = document.getElementById('brand-name-animated');
            const splashScreen = document.getElementById('splash-screen');
            const mainContent = document.getElementById('main-content');
            
            // --- MK677 Animation Logic ---
            // Wrap each character in a <span> to animate them individually
            brandElement.innerHTML = brandName.split('').map((char, index) => 
                `<span style="animation-delay: ${index * 0.2}s;">${char}</span>`
            ).join('');

            // --- Transition Logic ---
            // After the intro animation, hide the splash screen and show the main content
            const totalAnimationTime = brandName.length * 200 + 1500; // Total time in milliseconds

            setTimeout(() => {
                splashScreen.style.opacity = '0'; // Fade out the splash screen
                
                // After the fade out is complete, show the main content
                setTimeout(() => {
                    splashScreen.style.display = 'none'; // Hide it completely
                    mainContent.classList.add('visible');
                    
                    // --- Contact Details Animation Logic ---
                    const contactItems = document.querySelectorAll('.contact-card li');
                    contactItems.forEach((item, index) => {
                        // Stagger the animation for each contact item
                        item.style.animationDelay = `${index * 0.3}s`;
                    });

                }, 1000); // This delay should match the transition duration of the splash screen

            }, totalAnimationTime);
        });
    </script>

</body>
</html>
